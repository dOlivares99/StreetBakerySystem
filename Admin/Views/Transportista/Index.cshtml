<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Administración</a></li>
    <li class="breadcrumb-item active">Pedidos</li>
</ol>


<div class="row">


    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body" <h3 style="text-align:center">Total pedidos:</h3> <h2 id="total vendido">34</h2></div>

            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link">Pedidos</a>
                <div class="small text-white"><i class="fas fa-shopping-bag fa-2x"></i> </div>
            </div>
        </div>
    </div>
</div>




<div class="card">
    <div class="card-header">
        Lista de pedidos
        <i class="fas fa-boxes"></i>
    </div>

    @*boton que permite registrar un producto de extras*@

    <div class="card-body">
        <div class="row">
            <div class="col-12">


                <div class="input-group mb-4">
                    <input type="text" class="form-control" id="advanced-search-input" placeholder="Search" />
                    <button class="btn btn-primary" id="advanced-search-button" type="button">
                        <i class="fa fa-search"></i>
                    </button>
                </div>


                <button type="button" class="btn btn-primary btn-sm">Imprimir</button>
                <button type="button" class="btn btn-primary btn-sm">CSV</button>
                <button type="button" class="btn btn-primary btn-sm">Copiar</button>
                <button type="button" class="btn btn-primary btn-sm">PDF</button>
                <button type="button" class="btn btn-primary btn-sm">Excel</button>


                <div id="datatable"></div>





            </div>
        </div>

        <hr />

        @*listado de elementos de la tabla*@

        <table id="tabla" class="table table-striped" style="width: 100%">
            <thead class="table-heading">
                <tr>

                    <th> Nombre</th>
                    <th> Telefono</th>
                    <th> Estado </th>
                    <th> Fecha entrega</th>
                    <th> Direccion</th>
                  
                    <th>
                        Orden

                    </th>
                    <th> Acciones</th>
                </tr>

                <tr>

                    <td> Maria A</td>
                    <td> 85456567</td>
                    <td>
                        <select class="form-select form-select-sm" aria-label=".form-select-sm example">
                            <option selected>Cancelado</option>
                            <option value="1">Entregado</option>
                            <option value="2">Para entregar</option>
                     
                        </select>
                    </td>
                    <td>
                        <input id="datepicker" width="276" />
                        <script>
                            $('#datepicker').datepicker({
                                showOtherMonths: true
                            });
                        </script>
                    </td>
                    <td> San jose, guadalupe calle 54</td>
               
                    <td>
                        0089
                    </td>
                    <td>
          
                        <a class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons"></i></a>
                        <a class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons"></i></a>
                    </td>
                </tr>


            </thead>


            @*contenido de la tabla que viene de la base de datos*@






            <tbody>
            </tbody>

        </table>


        <div class="row">

            <div class="col-sm-3 mx-auto">

                <div class="input-group" style="text-align:center;">
                    <p>Records  &emsp; &emsp; </p>
                    <span class="input-group-prepend">

                        <button type="button" class="btn btn-outline-secondary btn-number" disabled="disabled" data-type="minus" data-field="quant[1]">
                            <span class="fa fa-minus"></span>
                        </button>
                    </span>

                    <input type="text" name="quant[1]" class="form-control input-number" value="1" min="1" max="10" style="text-align:center;">
                    <span class="input-group-append">
                        <button type="button" class="btn btn-outline-secondary btn-number" data-type="plus" data-field="quant[1]" style="text-align:center;">
                            <span class="fa fa-plus"></span>
                        </button>
                    </span>
                </div>
            </div>
        </div>


    </div>
</div>
