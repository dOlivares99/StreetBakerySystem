
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<style>

    .ui-dialog-titlebar-close {
        background: url("http://code.jquery.com/ui/1.10.3/themes/smoothness/images/ui-icons_888888_256x240.png") repeat scroll -93px -128px rgba(0, 0, 0, 0);
        border: medium none;
    }

        .ui-dialog-titlebar-close:hover {
            background: url("http://code.jquery.com/ui/1.10.3/themes/smoothness/images/ui-icons_222222_256x240.png") repeat scroll -93px -128px rgba(0, 0, 0, 0);
        }
</style>



<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">





<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Administración</a></li>
    <li class="breadcrumb-item active">Inventario de Extras</li>
</ol>


<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body" <h3 style="text-align:center">Total de Productos:</h3><h2 style="text-align:center">0</h2></div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" href="#">Inventario</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>

</div>



<div class="card">
    <div class="card-header">
        Lista de Inventario
        <i class="fas fa-boxes"></i>
    </div>

    @*boton que permite registrar un producto de extras*@

    <div class="card-body">
        <div class="row">
            <div class="col-12">

                <a class="btn btn-success" style="margin-bottom:10px" Onclick="PopupForm('@Url.Action("AddorEditExtras", "Inventario")')"> <i class="fa fa-plus"></i> Crear Nuevo</a>
            </div>
        </div>

        <hr />

        @*listado de elementos de la tabla*@

        <table id="tabla" class="table table-striped" style="width: 100%">
            <thead class="table-heading">
                <tr>

                    <th> Productos</th>
                    <th> Cantidad</th>
                    <th> Precio Venta</th>
                    <th> Precio Compra</th>
                    <th> Ganancia</th>
                    <th>Acciones</th>
                </tr>

                <tr>

                    <td> Maracons</td>
                    <td> 2</td>
                    <td> 3.000</td>
                    <td> 1.000</td>
                    <td> 2.000</td>
                    <td>
                        <a class="add" title="Add" data-toggle="tooltip"><i class="material-icons"></i></a>
                        <a class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons"></i></a>
                        <a class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons"></i></a>
                    </td>
                </tr>

            </thead>

            @*contenido de la tabla que viene de la base de datos*@






            <tbody>
            </tbody>

        </table>


    </div>
</div>
